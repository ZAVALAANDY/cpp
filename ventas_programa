int main(int argc, char** argv) {
		
	int i=0, vme = 0, vmed = 0, vma = 0, venta = 0;
	string nombre ;
	cout <<"ingrese la cantiad de ventas: ", cin >> i;
	
	
    for(int j = 1; j <=i; j=j+1)
	{
    cout<<"ingrese el valor de la venta: ", cin >> venta;

    cout<< endl;

    if(venta <= 200){
    	vme = vme +1;
	}else{
		if(venta > 200 && venta <= 400){
			vmed = vmed +1;
		
	}else{
	if(venta >= 400){
	} vma = vma +1;
    
	
	}
	
	}
	
	}
		cout << " Esta es la cantidad de ventas menores a 200: "<<vme<< endl;
			cout << " Esta es la cantidad de ventas entre 200 - 400: "<<vmed<< endl;
			cout << " Esta es la cantidad de ventas mayores a 400: "<<vma<< endl;
	return 0;
}
